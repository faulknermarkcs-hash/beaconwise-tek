    return VerificationContext(verified=True, role="physician", role_level=3, scope="general medicine")


@pytest.fixture
def attorney_ctx():
    return VerificationContext(verified=True, role="attorney", role_level=3, scope="corporate law - Ohio")


@pytest.fixture
