import sys
from pathlib import Path

import pytest

# Ensure src/ is on PYTHONPATH for tests
ROOT = Path(__file__).resolve().parents[1]
SRC = ROOT / "src"
if str(SRC) not in sys.path:
    sys.path.insert(0, str(SRC))

from ecosphere.consensus.verification.types import VerificationContext, PUBLIC_CONTEXT


@pytest.fixture
def public_ctx():
    return PUBLIC_CONTEXT


@pytest.fixture
def nurse_ctx():
    return VerificationContext(verified=True, role="nurse", role_level=2, scope="general nursing")


